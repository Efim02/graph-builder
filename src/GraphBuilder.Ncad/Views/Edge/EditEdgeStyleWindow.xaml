<common:BaseMcWindow x:Class="GraphBuilder.Ncad.Views.Edge.EditEdgeStyleWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:customEntities="clr-namespace:GraphBuilder.Ncad.CustomEntities"
                     xmlns:collections="clr-namespace:System.Collections;assembly=System.Runtime"
                     xmlns:wpf="http://schemas.mcad.com/xaml/presentation"
                     xmlns:edge="clr-namespace:GraphBuilder.Ncad.Views.Edge"
                     xmlns:common="clr-namespace:GraphBuilder.Ncad.Views.Common"
                     mc:Ignorable="d"
                     d:DataContext="{d:DesignInstance edge:EditEdgeStyleVM, IsDesignTimeCreatable=False}"
                     Title="Редактирование стиля линий"
                     MinWidth="300"
                     MinHeight="200"
                     Height="300"
                     Width="400">
    <wpf:McWindow.Resources>
        <ResourceDictionary>
            <collections:ArrayList x:Key="VertexFormKinds">
                <customEntities:VertexFormKind> Triangle </customEntities:VertexFormKind>
                <customEntities:VertexFormKind> Circle </customEntities:VertexFormKind>
            </collections:ArrayList>
        </ResourceDictionary>
    </wpf:McWindow.Resources>
    <Canvas Margin="8" TextBlock.FontSize="16">
        <StackPanel HorizontalAlignment="Left">
            <StackPanel HorizontalAlignment="Left" Margin="0 0 0 16">
                <TextBlock Text="Тип линии" Margin="0 0 0 8" />
                <ComboBox
                    Padding="8"
                    SelectedItem="{Binding LineTypeName}"
                    ItemsSource="{Binding LineTypeNames}"
                    Width="200" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="0 0 0 16">
                <TextBlock Text="Толщина линии" Margin="0 0 0 8" />
                <TextBox
                    Padding="8"
                    Width="120">
                    <TextBox.Text>
                        <Binding Path="LineThickness">
                            <Binding.ValidationRules>
                                <wpf:IntegerValueValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="0 0 0 16">
                <TextBlock Text="Цвет линии" Margin="0 0 0 8" />
                <wpf:ColorPicker Padding="8" SelectedColor="{Binding LineColor}" />
            </StackPanel>
        </StackPanel>
        <Button
            Content="Сохранить"
            Click="OnSave"
            Padding="8"
            Canvas.Bottom="0"
            Canvas.Right="0"
            HorizontalAlignment="Right" />
    </Canvas>
</common:BaseMcWindow>