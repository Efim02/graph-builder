<common:BaseMcWindow x:Class="GraphBuilder.Ncad.Views.Vertex.VertexWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:local="clr-namespace:GraphBuilder.Ncad.Views.Vertex"
              xmlns:customEntities="clr-namespace:GraphBuilder.Ncad.CustomEntities"
              xmlns:collections="clr-namespace:System.Collections;assembly=System.Runtime"
              xmlns:wpf="http://schemas.mcad.com/xaml/presentation"
              xmlns:common="clr-namespace:GraphBuilder.Ncad.Views.Common"
              mc:Ignorable="d"
              SizeToContent="WidthAndHeight"
              d:DataContext="{d:DesignInstance local:VertexVM, IsDesignTimeCreatable=False}"
              Title="Редактирование вершины" MinWidth="300" MinHeight="200">
    <common:BaseMcWindow.Resources>
        <ResourceDictionary>
            <collections:ArrayList x:Key="VertexFormKinds">
                <customEntities:VertexFormKind> Triangle </customEntities:VertexFormKind>
                <customEntities:VertexFormKind> Circle </customEntities:VertexFormKind>
            </collections:ArrayList>
        </ResourceDictionary>
    </common:BaseMcWindow.Resources>
    <Canvas Margin="8" TextBlock.FontSize="16">
        <StackPanel HorizontalAlignment="Left">
            <TextBlock Text="Форма вершины:" Margin="0 0 0 8" />
            <ComboBox
                Padding="8"
                SelectedItem="{Binding VertexFormKind}"
                ItemsSource="{StaticResource VertexFormKinds}"
                Width="120" />
        </StackPanel>
        <Button
            Content="Сохранить"
            Click="OnSave"
            Padding="8"
            Canvas.Bottom="0" 
            Canvas.Right="0" 
            HorizontalAlignment="Right" />
    </Canvas>
</common:BaseMcWindow>